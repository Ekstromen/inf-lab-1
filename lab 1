#include <iostream>
#include <cstdlib> 
#include <cmath>

int main()
{
	setlocale(LC_ALL, "rus");
	printf("Какое выражение точнее: 1) 16/19 = 0.842 или 2) sqrt(55) = 7.416\n");
	printf("1) 16/19 = %f\n", 16/19.);
	printf("2) sqrt(55) = %f\n", sqrt(55));
	printf("Предельные абсолютные погрешности, округляя их с избытком:\n");
	printf("1) %f\n", fabs((16 / 19.) - 0.842));
	printf("2) %f\n", fabs(sqrt(55) - 7.416));
	printf("Предельные абсолютные погрешности составляют в %:\n");
	printf("1) %f\n", ((fabs((16 / 19.) - 0.842)) / 0.842)*100);
	printf("2) %f\n", (fabs((sqrt(55) - 7.416) / 7.416))*100);
	if (fabs((16 / 19.) - 0.842) < fabs(sqrt(55) - 7.416)) printf("Значит, более точное выражение: 16/19 = 0.842\n");
	else printf("Значит, более точное выражение: sqrt(55) = 7.416\n");

	printf("\n");
	printf("Округлить сомнительные цифры числа, оставив верные знаки. Определить абсолютную погрешность результата.\n");
	printf("Число = 17.356, предельная погрешность = 0.11%\n");
	int x = 10;
	int z = 17.356;
	for (int i = 0; i != 1;) {
		if (z / x < 0.0011) continue;
		else {
			printf("%f", z / x);
			i = 1;
			break;
		}
		x = x / 10;
	}

	

}
